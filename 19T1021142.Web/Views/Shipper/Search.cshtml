@model _19T1021142.Web.Models.ShipperSearchOutput
@{
    Layout = null;
}

<!--Kết quả tìm kiếm-->
<p style="margin-top:10px;">
    có <strong>@Model.RowCount</strong> người giao hàng trong tổng số <strong> @Model.PageCount</strong> trang
</p>
<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr class="bg-primary">
                <th>Tên người giao hàng</th>
                <th>Điện thoại</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.ShipperName</td>
                    <td>@item.Phone</td>
                    <td>
                        <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-xs btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-center">
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a href="#">@i</a></li>
                }
                else
                {
                    <li><a href="javascipts:;" onclick="doSearch(@i)"> @i</a></li>
                }
            }

        </ul>
    </div>
</div>

