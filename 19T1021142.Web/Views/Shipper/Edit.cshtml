@model _19T1021142.DomainModels.Shipper
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Shipper/Save" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="ShipperID" value="@Model.ShipperID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Tên người giao hàng :</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" autofocus name="ShipperName" value="@Model.ShipperName">
                    @Html.ValidationMessageFor(m => m.ShipperName, "", new { @style = "color: #f00" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại :</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Phone" value="@Model.Phone">
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @style = "color: #f00" })
                </div>


                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        @Html.ValidationSummary("", new { @style = "color: #f00" })
                    </div>
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">
                            <i class="glyphicon glyphicon-floppy-disk"></i>
                            Lưu dữ liệu
                        </button>
                        <a href="~/Shipper" class="btn btn-warning"> Quay lại</a>
                    </div>
                </div>
        </form>
    </div>
</div>

