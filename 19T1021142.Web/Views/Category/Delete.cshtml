@model _19T1021142.DomainModels.Category
@{
    ViewBag.Title = "Xóa loại hàng";
}
<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" action="~/Category/Delete/@Model.CategoryID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên nhà cung cấp :</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.CategoryName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả :</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Description</p>
                </div>


                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10" style="margin-top:10px;">
                        <button type="submit" class="btn btn-danger">
                            <i class="glyphicon glyphicon-trash"></i>
                            Xóa dữ liệu
                        </button>
                        <a href="~/Category" class="btn btn-warning"> Quay lại</a>
                    </div>
                </div>
        </form>
    </div>
</div>

