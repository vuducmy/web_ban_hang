@model _19T1021142.DomainModels.Employee
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Save" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" name="EmployeeID" value="@Model.EmployeeID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Họ :</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" autofocus name="LastName" value="@Model.LastName">
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @style = "color: #f00" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên :</label>
                <div class="col-sm-10">

                    <input type="text" class="form-control" name="FirstName" value="@Model.FirstName">
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @style = "color: #f00" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh :</label>
                <div class="col-sm-10">
                    <input type="file" id="exampleFormControlFile1" class="form-control" name="uploadPhoto" accept="Image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                    @Html.ValidationMessageFor(m => m.Photo, "", new { @style = "color: #f00" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" class="form-control" name="Photo" value="@Model.Photo" />
                    @if (Model.Photo.Contains("http"))
                    {
                        <img id="Photo" src="@Model.Photo" class="img-circled" style="width: 100px" />

                    }
                    else
                    {
                        <img id="Photo" src="~/@Model.Photo" class="img-circled" style="width: 100px" />
                    }
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh :</label>
                <div class="col-sm-10">
                    @Html.HiddenFor(m => m.BirthDate)
                    <input type="text" class="form-control" name="birthday" value="@string.Format("{0:dd/MM/yyyy}",Model.BirthDate)">
                    @Html.ValidationMessageFor(m => m.BirthDate, "", new { @style = "color: #f00" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ghi chú :</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Notes" value="@Model.Notes">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email :</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" name="Email" value="@Model.Email">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @Html.ValidationSummary("", new { @style = "color: #f00" })
                </div>
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Employee" class="btn btn-warning"> Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</div>
